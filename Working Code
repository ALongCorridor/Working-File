import time

def pantry():
    import time
    print("Welcome to the pantry")
    time.sleep(1.25)
    print("The door closes behind you, darkness stares you in the face")
    time.sleep(1.25)
    print("Suddenly from behind you the door opens, a tall man is stood there with a bloody knife in his hand")
    time.sleep(1.25)
    print("He lunges toward you, there is no time to move and you get impaled by his sharp blade")
    time.sleep(1.25)
    print("You lie there helplessly on the floor, bleeding to death...")
    time.sleep(1.25)
    print("He says in a lowered voice 'I knew you wouldn't last more than 5 minutes!'")
    gameover()

def kitchen():
    import time
    
    print("Welcome to the Kitchen")
    print("You chose wisely")
    time.sleep(1.25)
    print("There is two doors, one infront of you and one to your right.")
    time.sleep(1.25)
    print("In the centre of the room is a table, upon it lies a small piece of paper.")
    time.sleep(1.25)
    print("A candle flickers in the darkness just lighting the room.")
    read = raw_input("There are some some kitchen utensils in the room, would you like to approach the table and read the note? (y/n)")
    if read == "y":
        print("There is blood on the note")
        time.sleep(1.25)
        print("Is the writing in blood?")
        time.sleep(1.25)
        print("The note says: ")
        time.sleep(1.25)
        riddle = raw_input("Some of my blood has been shed, by a knife I am dead, my right to life has gone, but which way did I go? It was the right way you must know! (forward/right)")
        
    if riddle == "forward":
        pantry()

def gameover():
    import time
    time.sleep(1)
    gameover = raw_input("Thank you for playing our game we hope you enjoyed! If you would like to return to the title screen type Play Again. If you would rather give up, type Exit")
    if gameover == "Play Again":
        print("Ah good choice!)
        startgame()
    elif gameover == "Play again":
        print("Ah good choice!)
        startgame()
    elif gameover == "play again":
        print("Ah good choice!)
        startgame()
    else:
        print("You puny weakling")

def entryhall():    
    import time
    import sys
    print("Welcome to the entry hall")
    name = raw_input("What is your name weary traveller?")
    
    print "Good day", name 
    begin = raw_input ("Are you ready to start your adventure? (y/n)")
    
    if begin == "y":
        print ("Good, then let your journey begin.")
    
        time.sleep(1.25)
        
        print("Which door do you choose, be wary though traveller... ")
        time.sleep(1.25)
        doorchoice = raw_input("for once you choose a door there is no going back. (left/right)")
            
        if doorchoice == ("left"):
            time.sleep(1.25)
            kitchen()
        
        elif doorchoice == ("right"):
            print("Hmmm interesting")
    elif begin == "n":
        sys.exit("boob")

def kitchen():
    import time
    
    print("Welcome to the Kitchen")
    print("You chose wisely")
    time.sleep(1.25)
    print("There is two doors, one infront of you and one to your right.")
    time.sleep(1.25)
    print("In the centre of the room is a table, upon it lies a small note.")
    time.sleep(1.25)
    print("A candle flickers in the darkness just lighting the room.")
    read = raw_input("There are some some kitchen utensils in the room, would you like to approach the table and read the note? (y/n)")
    if read == "y":
        print("There is blood on the note")
        time.sleep(1.25)
        print("Is the writing in blood?")
        time.sleep(1.25)
        print("The note says: ")
        time.sleep(1.25)
        riddle = raw_input("Some of my blood has been shed, by a knife I am dead, my right to life has gone, but which way did I go? It was the right way you must know! (forward/right)")
        
    if riddle == "forward":
        pantry()

def start():
    sure = raw_input("Be prepared, there is no turning back now for once you walk into the entry hall the door closes behind you. There is one way out and to find this you must work your way down twisted corridors and sharp corners to find one of two things. The exit, or your death! Good luck to you on your treacherous journey... Are you sure you would like to continue? (y/n)")
    if sure == "y":
        time.sleep(1.25)
        entryhall()
        
    if sure == "n":
        print("No surprise there then, you would of died anyway you puny weakling. Goodbye! Leave while you have the chance!")
   
def startgame():
    begin = raw_input("Hello! Welcome to our game. If you would like to play type Start game, if not type Exit. Happy gaming.")
    if begin == "Start game":
        start()
    elif begin == "start game":
        start()
    else:
        print("Fine then, don't appreciate artwork!")


begin = raw_input("Hello! Welcome to our game. If you would like to play type Start game, if not type Exit. Happy gaming.")

if begin == "Start game":
    start()
elif begin == "start game":
    start()
else:
    print("Fine then, don't appreciate artwork!")
